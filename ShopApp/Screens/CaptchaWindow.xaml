<Window x:Class="ShopApp.Screens.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaptchaWindow" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Name="CaptchaTextBlock" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>

        <TextBox Name="CaptchaInputTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30" Margin="0,80,0,0"/>

        <Button Content="Проверить" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="0,140,0,0" Click="CheckCaptchaButton_Click"/>
        <TextBlock HorizontalAlignment="Center" FontSize="25" Margin="0,16,0,0" TextWrapping="Wrap" Text="Подтвердите что вы не робот" VerticalAlignment="Top"/>
    </Grid>
</Window>

